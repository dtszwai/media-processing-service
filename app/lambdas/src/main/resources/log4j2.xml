<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="io.opentelemetry.instrumentation.log4j.appender.v2_17">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <Lambda name="Lambda">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %X{AWSRequestId} %-5level %logger{36} - %msg%n"/>
        </Lambda>
        <OpenTelemetry name="OpenTelemetry"/>
    </Appenders>
    <Loggers>
        <Logger name="com.mediaservice" level="INFO" additivity="false">
            <AppenderRef ref="Lambda"/>
            <AppenderRef ref="OpenTelemetry"/>
        </Logger>
        <Logger name="software.amazon.awssdk" level="WARN" additivity="false">
            <AppenderRef ref="Lambda"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Lambda"/>
            <AppenderRef ref="OpenTelemetry"/>
        </Root>
    </Loggers>
</Configuration>
